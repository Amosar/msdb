<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns='http://www.ehcache.org/v3'
         xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.0.xsd">

    <cache-template name="simple">
        <expiry>
            <ttl unit="seconds">3600</ttl>
        </expiry>
        <heap unit="entries">1000</heap>
    </cache-template>
    
    <cache-template name="longlived">
        <expiry>
            <ttl unit="seconds">172800</ttl>
        </expiry>
        <heap unit="entries">100</heap>
    </cache-template>
    
    <cache alias="homeInfo" uses-template="simple"/>
    <cache alias="calendar" uses-template="simple"/>
    
    <cache alias="driversStandingsCache" uses-template="longlived"/>
    <cache alias="teamsStandingsCache" uses-template="longlived"/>

    <cache alias="com.icesoft.msdb.domain.User" uses-template="simple"/>

    <cache alias="com.icesoft.msdb.domain.Authority" uses-template="simple"/>

    <cache alias="com.icesoft.msdb.domain.User.authorities" uses-template="simple"/>

    <cache alias="com.icesoft.msdb.domain.PersistentToken" uses-template="simple"/>

    <cache alias="com.icesoft.msdb.domain.User.persistentTokens" uses-template="simple"/>

    <cache alias="com.icesoft.msdb.social.SocialUserConnection" uses-template="simple"/>

    <cache alias="com.icesoft.msdb.domain.PointsSystem" uses-template="simple"/>

    <cache alias="com.icesoft.msdb.domain.TyreProvider" uses-template="simple"/>

    <cache alias="com.icesoft.msdb.domain.Chassis" uses-template="simple"/>

    <cache alias="com.icesoft.msdb.domain.Chassis.evolutions" uses-template="simple"/>

    <cache alias="com.icesoft.msdb.domain.FuelProvider" uses-template="simple"/>

    <cache alias="com.icesoft.msdb.domain.Event" uses-template="simple"/>

    <cache alias="com.icesoft.msdb.domain.Event.editions" uses-template="simple"/>

    <cache alias="com.icesoft.msdb.domain.SeriesEdition" uses-template="simple"/>

    <cache alias="com.icesoft.msdb.domain.Category" uses-template="simple"/>

    <cache alias="com.icesoft.msdb.domain.EventEdition" uses-template="simple"/>

    <!-- jhipster-needle-ehcache-add-entry -->
</config>
